{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "News",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "headline": { "type": "string" },
      "content": { "type": ["string", "null"]},
      "date": {"type": "string", "format": "date"}
    },
    "required": ["id", "headline", "content"]
  }
}
